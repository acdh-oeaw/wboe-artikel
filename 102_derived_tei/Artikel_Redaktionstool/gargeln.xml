            </sense>
            <sense>
              <def>umher-, dahintrotten; langsam, schwerfällig, stumpfsinnig irgendwohin gehen; langsam dahingehen und sich dabei überall umsehen</def>
              <usg type="geo">
                <placeName type="grossregion" ref="/geodata-wboe.xml#p1A.2">mSTir.</placeName>
              </usg>
              <usg type="geo">
                <placeName type="bundesland" ref="/geodata-wboe.xml#p1B">OTir.</placeName>
              </usg>
              <ptr type="collection" subtype="bedeutung" target="/collections-wboe.xml#c31719"/>
            </sense>
          </sense>
          <sense>
            <def>ungeschickt arbeiten</def>
            <usg type="geo">
              <placeName type="grossregion" ref="/geodata-wboe.xml#p1A.2">mSTir.</placeName>
            </usg>
            <ptr type="collection" subtype="bedeutung" target="/collections-wboe.xml#c31729"/>
          </sense>
        </sense>
